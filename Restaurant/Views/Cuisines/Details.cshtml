@{
  Layout = "_Layout";
}


@model BestRestaurant.Models.Cuisine

<h1><u>Cuisine Detail: </u></h1>

<h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>
<h3>@Html.DisplayNameFor(model => model.Restaurant): @Html.DisplayFor(model => model.Restaurant.Name)</h3>

<div class="row">
  <div class="col">
    <button type="button" class="btn btn-info btn-lg">@Html.ActionLink("Edit Cuisine", "Edit", new { id =
      Model.CuisineId })</button>
  </div>
  <div class="col">
    <button type="button" class="btn btn-info btn-lg">@Html.ActionLink("Delete Cuisine", "Delete", new { id =
      Model.CuisineId })</button>
  </div>
  <div class="col">
    <button type="button" class="btn btn-info btn-lg">@Html.ActionLink("Back", "Index")</button>
  </div>
</div>
